<!--components/address-item/address-item.wxml-->
<view class='address-item-container'>
  <view class='user-info'>
    <text class='user-name'>{{addressItem.name}}</text>
    <text class='user-telephone'>{{addressItem.phone}}</text>
    <van-tag color="#FE6D2E" round plain wx:if="{{addressItem.is_default}}">默认</van-tag>
  </view>
  <view class='address-info'>
    <view class='address-desc'>
      {{addressItem.address}}
    </view>
    <image src='/source/image/icon-edit.png' class='icon-edit'></image>
  </view>
</view>
