/* components/address-item/address-item.wxss */
.address-item-container {
  width: 90%;
  margin-left: 5%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  padding: 50rpx;
  margin-bottom: 24rpx;
  border-radius: 10rpx;
}

.user-name {
  font-size: 32rpx;
}

.user-telephone {
  font-size: 32rpx;
  color: #999999;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.address-info {
  margin-top: 26rpx;
  position: relative;
  width: 100%;
}

.address-desc {
  font-size: 26rpx;
  width: 90%;
  padding-right: 40rpx;
}

.icon-edit {
  position: absolute;
  top: -22rpx;
  right: 0;
  width: 32rpx;
  height: 42rpx;
  float: right;
  padding:  10rpx;
}