.phone-confirm-warp{
  padding: 20rpx 45rpx 40rpx 45rpx;
  position: relative;
}
.title{
  font-size: 32rpx;
  text-align: center;
  font-weight: bold;
  line-height: 32rpx;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}
.shut-down{
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  top: 24rpx;
  right: 32rpx;
  z-index: 200;
}
.message{
  font-size: 26rpx;
  line-height: 44rpx;
}
.message text{
  color: #FE6D2E;
}
.phone-confirm-input{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 28rpx;
}
.phone-confirm-input input{
  width: 337rpx;
  height: 70rpx;
  border: 1rpx solid #B3B3B3;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding-left: 24rpx;
  }
.phone-confirm-input button{
  width: 222rpx;
  height: 70rpx;
  background-image: linear-gradient( #FED431, #FFB423);
  font-size: 26rpx;
  color: #ffffff;
  line-height: 70rpx;
}
.phone-confirm-button{
  margin-top: 40rpx;
  width: 100%;
}
.phone-confirm-button button{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #CCCCCC;
  font-size: 30rpx;
  color: #FFFFFF;
  border-radius: 10rpx;
}
.active button{
  background-image: linear-gradient( #FED431, #FFB423);
}