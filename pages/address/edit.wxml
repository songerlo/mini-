<!--pages/address/edit.wxml-->
<view class='edit'>
  <van-cell-group>
    <van-field
      value="{{ username }}"
      required
      clearable
      label="收货人"
      placeholder="请填写收货人姓名"
      bind:click-icon="onClickIcon"
    />

    <van-field
      value="{{ password }}"
      label="手机号"
      placeholder="请填写收货人手机号"
      required
      border="{{ false }}"
    />

    <van-field
      value="{{ password }}"
      label="所在地区"
      placeholder="所在地区"
      required
      border="{{ false }}"
    />

    <van-field
      value="{{ password }}"
      label="详细地址"
      placeholder="街道、门牌号等"
      required
      border="{{ false }}"
    />

    <van-field
      value="{{ password }}"
      label="设置默认地址"
      placeholder="街道、门牌号等"
      required
      border="{{ false }}"
    />

    <van-button type="default">保存</van-button>
  </van-cell-group>
</view>
