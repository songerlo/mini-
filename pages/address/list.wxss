/* pages/address/list.wxss */
page{
  background-color: #F5F5F5;
}
.address-list {
  width: 100%;
  height: 100vh;
  padding-bottom: 150rpx;
}
.add-address{
  width: 100%;
  height: 106rpx;
  background-color: #ffffff;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-address button{
  width: 700rpx;
  height: 88rpx;
  background-image: linear-gradient( #FED431, #FFB423);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}
.add-address button text{
  padding-left:10rpx;
  font-size: 34rpx;
  line-height: 50rpx;
}
.add-img{
  width: 38rpx;
  height: 38rpx;
}
.address-default{
  width: 100%;
  height: 70vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.address-default image{
  width: 374rpx;
  height: 288rpx;
}
.address-default .tip{
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
  text-align: center;
}