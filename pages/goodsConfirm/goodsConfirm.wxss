/* pages/goodsConfirm/goodsConfirm.wxss */
.goodsconfirm-container{
  height: 100vh;
  padding: 24rpx;
}
.goodsconfirm-bttom{
  width: 100%;
  height: 98rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: flex-start;
  background-color: #ffffff;
}
.goodsconfirm-bttom-left{
  width: 400rpx;
  display: flex;
  align-items: flex-end;
  padding-left: 24rpx;
  padding-bottom: 30rpx;
  text-align: end;
}
.goodsconfirm-bttom-left text:nth-child(1){
  font-size: 24rpx;
  color: #333333;
}
.goodsconfirm-bttom-left text:nth-child(2){
  font-size: 48rpx;
  line-height: 45rpx;
  color: #FE6D2E;
  font-weight: bold;
  padding-right: 2rpx;
}
.goodsconfirm-bttom-left text:nth-child(3){
  font-size: 24rpx;
  color: #FE6D2E;
}
.goodsconfirm-bttom-right{
  width: 350rpx;
}
.goodsconfirm-bttom-right button{
  width: 100%;
  font-size: 34rpx;
  color: #ffffff;
  line-height: 98rpx;
  height: 98rpx;
  border: none;
  font-weight: bold;
  letter-spacing: 2rpx;
  border-radius: 0;
}
.default-btn button{
  background-color: #CDCDCD;
}
.active-btn button{
  background-image: linear-gradient( #FED431, #FFB423);
}
/* address */
.goodsconfirm-address{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 40rpx 0;
}
.goodsconfirm-address-middle{
  flex: 1;
}
.goodsconfirm-address-left image{
  width: 30rpx;
  height: 37rpx;
  padding:0 32rpx;
}
.address-name{
  font-size: 32rpx;
  line-height: 32rpx;
  display: flex;
  align-items: flex-start;
}
.address-name text:nth-child(1){
  color: #333333;
}
.address-name text:nth-child(2){
  color:#999999;
  padding-left: 39rpx;
}
.default{
  display: inline-block;
  font-size: 20rpx;
  line-height: 20rpx;
  border: 1rpx solid #FE6D2E;
  color: #FE6D2E;
  padding: 3rpx 8rpx 4rpx 6rpx;
  border-radius: 4rpx;
  margin-left: 11rpx;
}
.address{
  font-size: 26rpx;
  line-height: 36rpx;
  margin-top: 15rpx;
}

.goodsconfirm-address-right{
  padding: 0 30rpx 0 40rpx;
}
.creatAddress{
  font-size: 32rpx;
  color: #333333;
}
/* goods */
.goodsconfirm-details{
  width: 100%;
  background-color: #ffffff;
  margin-top: 24rpx;
  border-radius: 10rpx;
  padding: 0 24rpx;
}
.goods-infor-warp{
  display: flex;
  padding: 24rpx 0;
}
.goods-info-font{
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}
.goods-infor-warp-left{
  width: 200rpx;
  height: 200rpx;
  border-radius: 4rpx;
  overflow: hidden;
}
.goods-infor-warp-left .goodsImg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 4rpx;
  float: left;
}
.goods-info-name{
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  width: 100%;
  text-align: justify;
}
.goods-info-type{
  font-size: 24rpx;
  color: #999999;
  line-height: 24rpx;
  margin-top:  14rpx;
}
.goods-info-flex{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-integral{
  color: #FE6D2E;
  font-size: 22rpx;
}
.goods-integral text:nth-child(1){
  font-weight: bold;
  font-size: 44rpx;
}
.goods-integral text:nth-child(2){
  padding-left: 4rpx;
}
.goods-count{
  font-size: 24rpx;
  color: #999999;
}
.goods-cell{
  width: 100%;
  height: 89rpx;
  border-top: 1rpx solid #F0F0F0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.goods-cell-left{
  width: 140rpx;
  text-align: left;
  font-size: 26rpx;
  color: #999999;
}
.goods-cell-right{
  font-size: 26rpx;
  color: #333333;
  flex: 1;
}
.goods-cell-right input{
  width: 100%;
  font-size: 26rpx;
}
.placeholder{
  color: #CCCCCC;
  letter-spacing: 2rpx;
}