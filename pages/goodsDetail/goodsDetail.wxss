/* pages/goodsDetail/goodsDetail.wxss */

.goods-detail-container {
    padding-bottom: 110rpx;
}

.goods-detail-top {
    width: 100%;
    background-color: #fff;
}

.swiper {
    width: 100%;
    position: relative;
}

.swiper-box {
    width: 100%;
    height: 750rpx;
}

.swiper-box image {
    width: 100%;
    height: 750rpx;
}

.position-b {
    display: inline-block;
    position: absolute;
    bottom: 52rpx;
    right: 32rpx;
    background: #9d9d9d;
    border-radius: 16rpx;
    font-size: 24rpx;
    color: #fff;
    padding: 5rpx 18rpx;
}

.goods-intro {
    padding: 32rpx;
    border-top: 1rpx solid #F0F0F0;
}

.goods-compare {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.goods-share-btn {
    background-color: #F5F5F5;
    padding: 8rpx 18rpx;
    display: flex;
    align-items: center;
    border-radius: 19rpx;
}

.goods-share-btn::after {
    border: none;
}

.goods-share-btn image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 6rpx;
}

.goods-share-btn text {
    font-size: 24rpx;
    line-height: 24rpx;
    color: #fe6d2e;
}

.goods-compare-left {}

.goods-compare-left .integral {
    display: inline-block;
    font-size: 48rpx;
    color: #FE6D2E;
    font-weight: bold;
}

.goods-compare-left .integral text {
    font-size: 24rpx;
}

.goods-compare-left .taobao {
    display: inline-block;
    font-size: 24rpx;
    color: #999999;
    margin-left: 30rpx;
    line-height: 24rpx;
    text-align: end;
}

.goods-compare-left .taobao text:nth-child(2) {
    padding-right: 5rpx;
}

.goods-name {
    font-size: 34rpx;
    font-weight: bold;
    line-height: 46rpx;
}


/* goods-cell */

.goods-cell {
    padding: 32rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #F5F5F5;
}

.goods-cell:last-child {
    border: none;
}

.goods-cell .goods-cell-left {
    font-size: 26rpx;
    color: #999999;
    padding-right: 40rpx;
}

.goods-cell .goods-cell-right {
    font-size: 26rpx;
    color: #333333;
    flex: 1;
    line-height: 100%;
}

.goods-cell-right input {
    font-weight: bold;
    padding: 5rpx 20rpx;
    background-color: #F5F5F5;
}

.is-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.commitment {
    margin-top: 10rpx;
    background-color: #ffffff;
}

.goods-details .adv {
    overflow: hidden;
}

.goods-details .adv image {
    width: 100%;
    height: 313rpx;
    float: left;
}


/* goods-detail-bottom */

.goods-detail-bottom {
    width: 100%;
    height: 98rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: flex-start;
    background-color: #ffffff;
    z-index: 999;
}

.goods-detail-bottom-left {
    width: 264rpx;
    display: flex;
    justify-content: space-around;
    padding: 0 20rpx;
}

.goods-detail-bottom-left button {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-color: transparent;
    align-items: center;
    flex: 1;
    padding: 12rpx 0 15rpx 0;
}

.goods-detail-bottom-left button::after {
    border: none;
}

.goods-detail-bottom-left button text {
    font-size: 20rpx;
    line-height: 20rpx;
    color: #999999;
}

.goods-detail-bottom-left button image {
    width: 48rpx;
    height: 48rpx;
}

.goods-detail-bottom-right {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.goods-detail-bottom-right button {
    width: 100%;
    height: 98rpx;
    font-size: 34rpx;
    font-weight: bold;
    line-height: 98rpx;
    color: #ffffff;
    border: none;
    border-radius: 0;
}

.goods-detail-bottom-right button::after {
    border: none;
}

.default-btn button {
    background-color: #CDCDCD;
}

.active-btn button {
    background-image: linear-gradient(#FED431, #FFB423);
}

.imgbox image {
    width: 100%;
}