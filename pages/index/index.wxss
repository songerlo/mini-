/**index.wxss**/

/* 积分填出框 */
.alert-integral{
  width: 520rpx;
  height: 660rpx;
  position: fixed;
  top:-10%;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 101;
  background-color: #ffffff;
}
.integral-bg{
  width: 520rpx;
  height: 230rpx;
}
.integral-avatar-list{
 margin-top: 50rpx;
 text-align: center;
 /* display: flex; */
 /* justify-content: center; */
}
.integral-avatar-item{
  display: inline-block;
  width: 68rpx;
  height: 68rpx;
  margin-left: -25rpx;
  position: relative;
}
.integral-avatar-item image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 1rpx solid #ffffff;
}
.font-1{
  font-size: 28rpx;
  line-height: 28rpx;
  color: #333333;
  margin-top: 35rpx;
}
.font-2{
  font-size: 32rpx;
  line-height: 32rpx;
  color: #333333;
  margin-top: 26rpx;
  margin-bottom: 65rpx;
}
.btn-alert{
  text-align: center;
}
.btn-alert button{
  width: 460rpx;
  height: 70rpx;
  line-height: 65rpx;
  background-image: linear-gradient(0deg,#F39626, #FFB65E,#FFCE82);
  border-radius: 35rpx;
  font-size: 31rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 1rpx;
  box-shadow: 0 3rpx 13rpx #FD9B1B;
  border: none;
}
.shut-down{
  width: 59rpx;
  height: 59rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: -140rpx;
  margin: auto;
}

/* vip弹出框 */
.alert-vip{
  width: 520rpx;
  height: 660rpx;
  position: fixed;
  top:-10%;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 101;
  background-color: #ffffff;
}
.vip-top{
  width: 100%;
  position: relative;
}
.vip-top .bg{
  width: 520rpx;
  height: 349rpx;
}
.time-line{
  display: inline-block;
  font-size: 20rpx;
  line-height: 20rpx;
  color: #999999;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 83rpx;
  margin: auto;
  text-align: center;
}
.code-warp{
  padding: 30rpx 0 43rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.code-warp .tip{
  font-size: 26rpx;
  line-height: 26rpx;
  padding-bottom: 24rpx;
  color: #999999;
}
.code-warp input{
  width: 414rpx;
  height: 70rpx;
  font-size: 26rpx;
  padding-left: 15rpx;
  border-radius: 6rpx;
  border: 1rpx solid #EDEDED;
  background-color: #EDEDED;
}

/* 顶部轮播图 */
.index-top .swiper-box{
  width: 100%;
  height: 300rpx;
}
.index-top .swiper-box image{
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}
/* 页面样式 */
page{
  padding: 24rpx;
}
.index-container{
  
}
.commitment{
  margin-top: 30rpx;
}
/* 商品列表 */
.goods-list{
  border-radius: 10rpx;
  background-color: #ffffff;
  margin-top: 30rpx;
  overflow: hidden;
}
.good-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  border-bottom: 1rpx solid #F0F0F0;
}
.good-title .laber{
  font-size: 34rpx;
  font-weight: bold;
  color: #353535;
}
.good-title .more{
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}
.good-title .more text{
  padding-right: 2rpx;
}