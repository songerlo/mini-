/* pages/integral/integral.wxss */
.top {
  width: 100%;
  height: 330rpx;
  /* background-color: #FFB423; */
  background: url('http://s29.9956.cn/res/mall/img/bg.png') no-repeat;
  background-size: 100%;
}

.icon-wrap {
  display: flex;
  align-content: center;
  font-size: 56rpx;
  color: #ffffff;
  padding-top: 60rpx;
  justify-content: center;
  align-items: center;
}

.icon-wrap image {
  width: 32rpx;
  height: 34rpx;
  margin-right: 14rpx;
}

.rule {
  text-align: center;
  margin-top: 10rpx;
}

.rule button {
  display: inline-block;
  padding: 16rpx 29rpx;
  background-color: rgba(255, 255, 255, .5);
  line-height: 24rpx;
  font-size: 24rpx;
  color: #ffffff;
}

button::after {
  border: none;
}

.list-wrap {
  width: 702rpx;
  padding: 0 24rpx;
  margin: -100rpx auto 0 auto;
  background-color: #ffffff;
  min-height: 50vh;
  border-radius: 10rpx;
}

.custom-class {
  padding-top: 10rpx !important;
}

.list {
  padding: 22rpx 31rpx;
}