/* pages/recharge/index.wxss */
.recharge-container{
  padding: 24rpx;
}
.recharge-select-warp{
  background-color: #ffffff;
  border-radius: 10rpx;
  padding:32rpx 25rpx;
}
.recharge-select-list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 32rpx;
}
.recharge-title{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.recharge-select-item{
  width: 210rpx;
  height: 138rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 12rpx;
  align-items: center;
  border-radius: 10rpx;
}
.recharge-select-item text:nth-child(1){
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: bold;
}
.recharge-select-item text:nth-child(2){
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 20rpx;
}
.default{
  border: 1rpx solid #F0F0F0;
}
.default text{
  color: #666666;
}
.input-active{
  border: 1rpx solid #FFB423;
}
.active{
  background-image: linear-gradient( #FED431, #FFB423);
}
.active text{
  color: #FFFFFF;
}
.recharge-select-item input{
  font-size: 32rpx;
  width: 126rpx;
  color: #333333;
}
.pay-warp{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}
.pay-tip{
  font-size: 26rpx;
  color: #333333;
  line-height: 26rpx;
}
.pay-font{
  font-size: 26rpx;
  color: #333333;
  margin-top: 20rpx;
}
.pay-font text{
  font-size: 58rpx;
  font-weight: bold;
  padding-right: 14rpx;
  color: #FE6D2E;
}
.notice {
  display: flex;
  flex-direction: column;
  margin-top: 18rpx;
  padding-left: 23rpx;
}
.notice text{
  font-size: 24rpx;
  line-height: 40rpx;
  color: #999999;
}
.recharge-btn{
  width: 100%;
  margin-top: 200rpx;
}
.recharge-btn button{
  width: 100%;
  height: 88rpx;
  color:#ffffff;
  font-size: 34rpx;
  font-weight: bold;
  background-image: linear-gradient( #FED431, #FFB423);
  border-radius: 10rpx;
}
.recharge-recorde{
  text-align: center;
  font-size: 28rpx;
  color: #959595;
  margin-top: 60rpx;
}