/* pages/sendIntegral/sendIntegral.wxss */
.content {
  background-color: #ffffff;
  width: 702rpx;
  margin: auto;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 0 36rpx 60rpx 36rpx;
  margin-top: 12rpx;
}
.input-wrap {
  margin-top: 60rpx;
}
.label {
  font-size: 30rpx;
  color: #555555;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.label .require {
  width: 30rpx;
  height: 30rpx;
  padding-right: 12rpx;
}
input {
  border:1rpx solid #E5E5E5;
  border-radius: 10rpx;
  height: 70rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
}
.btn {
  margin-top: 60rpx;
  padding: 0 65rpx;
}
button::after{
  border: none;
}

.btn button{
  width: 100%;
  height: 88rpx;
  background-image: linear-gradient( #FED431, #FFB423);
  color: #ffffff;
}
.fixed {
  width: 100%;
  height: 309rpx;
  position: fixed;
  bottom:0;
  left: 0;
  background-color: #ffffff;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #959595;
}
.tip {
  font-size: 30rpx;
}
.weixin {
  width: 102rpx;
  height: 102rpx;
}
.fixed button{
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: transparent;
}
.f-1 {
  font-size: 24rpx;
}
.phone-confirm-input{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.phone-confirm-input input{
  width: 454rpx;
  height: 70rpx;
  /* border: 1rpx solid #B3B3B3; */
  border-radius: 10rpx 0 0 10rpx;
  font-size: 26rpx;
  padding-left: 24rpx;
  float: left;
  margin: 0;
  border-right: none;
  }
.phone-confirm-input button{
  width: 222rpx;
  height: 70rpx;
  background-image: linear-gradient( #FED431, #FFB423);
  font-size: 26rpx;
  color: #ffffff;
  line-height: 70rpx;
  float: right;
  border-radius: 0 5rpx 5rpx 0;
}